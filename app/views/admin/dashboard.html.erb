<div>
    <h3>
        Admin Dashboard test
        <button id="add-user">
          <%= link_to "Add User", new_user_path() %>
        </button>
        <button id="log-out">
          <%= link_to "Log Out", root_path %>
        </button>
    </h3>
</div>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Role</th>
      <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
        <td><%= user.email %></td>
        <td><%= link_to "Edit", edit_user_path(user) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
